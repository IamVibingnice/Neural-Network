{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist/server",
    "rootDir": "./src/server",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["src/server/**/*"],
  "exclude": ["node_modules"]
}
